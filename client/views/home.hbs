<div class="row">
  <div class="col">
    <h1>Users</h1>
  </div>

  <div class="col d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-success align-self-center">+ add user</a>
  </div>
</div>
{{#if error}}
<div class="alert-box alert-danger" role="error">
  {{error}}
</div>
{{/if}}

{{#if alert}}
<div class="alert-box alert-success" role="alert">
  {{alert}}
</div>
{{/if}}

{{#if removedUser}}
<div class="alert-box alert-danger" role="error">
  {{removedUser}}
</div>
{{/if}}
<table class="table table-bordered">
  <thead class="thead-default">
    <tr class="table tr">
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-primary">View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-warning">Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>